{
  "manifest_version": 3,
  "name": "VS Code IDE Switcher",
  "version": "1.3.0",
  "description": "攔截 VS Code/Cursor/Windsurf/VSCodium 連結，讓你選擇要用哪個 IDE 開啟。支援 Open VSX 快速安裝。",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "選擇 IDE"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}